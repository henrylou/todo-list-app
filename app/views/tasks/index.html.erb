<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Deadline</th>
      <th scope="col">Importance</th>
      <th scope="col">Category</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  
  <tbody>
    <% current_user.tasks.each do |task| %> 
    <% if task.importance == 3 %>
      <tr class="table-danger">
    <% else %>
      <tr class="table-warning">
    <% end %>
        <td scope="row"><%= task.taskname %></td>
        <td><%= task.deadline %></td>
        <td>
          <% (1..task.importance).each { %>
            <%= icon('fas', 'star') %>        
          <% } %>
        </td>
        <td><%= task.category %></td>
        <!-- <td><%#= link_to 'Show', task %></td> -->
        <td><%= link_to icon('fas', 'edit'), edit_task_path(task) %></td>
        <td><%= link_to icon('fas', 'trash-alt'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-group col-sm-4">
  <%= link_to 'New Task', new_task_path, class: "btn btn-success" %>
</div>

