<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-dismissible alert-danger" id="error_explanation">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :taskname %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :taskname, class: "form-control", placeholder: "Min: 3, Max: 20"  %>
    </div>
  </div>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :description %>
    </div>
    <div class="col-sm-8">
      <%= form.text_area :description, rows: 3, class: "form-control", placeholder: "Max: 300" %>
    </div>
  </div>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :deadline %>
    </div>
    <div class="col-sm-8">
      <%= form.datetime_select :deadline, class: "form-control" %>
    </div>
  </div>
  
