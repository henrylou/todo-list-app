<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :taskname %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :taskname, class: "form-control" %>
    </div>
  </div>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :description %>
    </div>
    <div class="col-sm-8">
      <%= form.text_area :description, rows: 5, class: "form-control" %>
    </div>
  </div>

  <div class="form-group field">
    <div class="control-label col-sm-4">
      <%= form.label :deadline %>
    </div>
    <div class="col-sm-8">
      <%= form.datetime_select :deadline, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group field">
    <div class="control-label col-sm-4 ">    
      <%= form.label :importance %>
    </div>
    <div class="col-sm-8">
      <%= form.radio_button :importance, 3 %>
      <%= icon('fa', 'star') + icon('fa', 'star') + icon('fa', 'star') %> &nbsp;
      <%= form.radio_button :importance, 2 %>
      <%= icon('fa', 'star') + icon('fa', 'star') %> &nbsp;
      <%= form.radio_button :importance, 1 %>
      <%= icon('fa', 'star') %>
    </div>
  </div> 

  <div class="form-group field">
    <div class="control-label col-sm-12">
      <%= form.label :category %>
    </div>
    <div class="col-sm-8">
      <%= form.radio_button :category, "Study" %> <%= icon('fas', 'university') %> Study &nbsp;
      <%= form.radio_button :category, "Work" %><%= icon('fas', 'briefcase') %> Work&nbsp;
      <%= form.radio_button :category, "Family" %><%= icon('fas', 'home') %> Family &nbsp;
      <%= form.radio_button :category, "Friends" %><%= icon('fas', 'user-friends') %> Friends &nbsp;
      <%= form.radio_button :category, "Health" %><%= icon('fas', 'medkit') %> Health &nbsp;
      <%= form.radio_button :category, "Others" %><%= icon('fas', 'question-circle') %> Others &nbsp;
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-2">    
      <%= form.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
